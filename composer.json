{
  "name": "facile-it/doctrine-dynamic-discriminator-map",
  "description": "Dynamic discriminator map for Doctrine ORM",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": [
    "doctrine",
    "orm",
    "discriminator",
    "inheritance",
    "map"
  ],
  "authors": [
    {
      "name": "Thomas Vargiu",
      "email": "thomas.vargiu@facile.it"
    }
  ],
  "extra": {
    "laminas": {
      "component": "Facile\\DoctrineDDM",
      "config-provider": "Facile\\DoctrineDDM\\ConfigProvider"
    }
  },
  "require": {
    "php": "^8.0",
    "doctrine/orm": "^2.6.6",
    "container-interop/container-interop": "^1.0"
  },
  "require-dev": {
    "facile-it/facile-coding-standard": "^1.3",
    "phpunit/phpunit": "^8.0",
    "phpspec/prophecy": "^1.6.0",
    "doctrine/data-fixtures": "^1.2.2",
    "symfony/cache": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "Facile\\DoctrineDDM\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Facile\\DoctrineDDMTest\\": [
        "tests/DoctrineDDMTest/"
      ]
    }
  },
  "scripts": {
    "phpunit": "phpunit",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix --diff",
    "tests": [
      "@cs-check",
      "phpunit"
    ]
  },
  "config": {
    "allow-plugins": {
      "facile-it/facile-coding-standard": true
    }
  }
}
